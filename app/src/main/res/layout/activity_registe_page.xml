<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registe_page">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/bg"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="#f70"
                    android:text="Gauss 欢迎您注册"
                    android:gravity="center"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入用户名"
                    android:layout_weight="0.6"
                    android:textColor="#ff7700"
                    android:id="@+id/registe_user_name"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <!--android:inputType="textPassword"-->
            <EditText
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_password"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <!--android:inputType="textPassword"-->
            <EditText
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_password_confirm"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <!--android:inputType="textPassword"-->
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_phone"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入短信验证码"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/registe_phone_code"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <Button
                    android:layout_width="0dp"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="获取短信验证码"
                    android:id="@+id/registe_phone_code_btn"
                    android:textColor="#fff"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
                    android:background="#6f70"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <!--android:inputType="textPassword"-->
            <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_email"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
            <!--android:inputType="textPassword"-->
            <EditText
                    android:singleLine="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入签名"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_sign"
                    android:textColor="#ff7700"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2fff"
                android:padding="1dp"
                android:layout_marginTop="10dp">
            <Button
                    android:background="#6f70"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textSize="20sp"
                    android:layout_weight="0.6"
                    android:id="@+id/registe_btn"
                    android:textColor="#fff"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
            />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
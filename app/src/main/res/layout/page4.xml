<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:padding="10dp"
        tools:context=".page4">
    <example.com.gauss.title
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
    >
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person_black_24dp"
                android:id="@+id/page4_image"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:gravity="center"
                    android:background="#3f70"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UserName"
                    android:textAllCaps="false"
                    android:id="@+id/page4_username"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
                    android:paddingRight="10dp"
            />
            <TextView
                    android:textColor="#f70"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="this is a sign"
                    android:textAllCaps="false"
                    android:id="@+id/page4_sign"
                    fontPath="fonts/font1.ttf"
                    tools:ignore="MissingPrefix"
                    android:paddingRight="10dp"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <TextView
                android:gravity="center"
                android:textColor="#f70"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="身份:普通用户"
                android:textAllCaps="false"
                android:id="@+id/page4_rights"
                fontPath="fonts/font1.ttf"
                tools:ignore="MissingPrefix"
                android:paddingRight="10dp"
        />

        <Button
                android:gravity="center"
                android:textColor="#f70"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3fff"
                android:text="修改信息"
                android:textAllCaps="false"
                android:id="@+id/page4_motify"
                fontPath="fonts/font1.ttf"
                tools:ignore="MissingPrefix"
                android:paddingRight="10dp"
        />
        <Button
                android:gravity="center"
                android:textColor="#f70"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3fff"
                android:text="修改密码"
                android:textAllCaps="false"
                android:id="@+id/page4_password"
                fontPath="fonts/font1.ttf"
                tools:ignore="MissingPrefix"
                android:paddingRight="10dp"
        />

    </LinearLayout>
    <example.com.gauss.bottom
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="bottom"/>
</LinearLayout>